@model GitHubStats.Models.UserStats
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div>

        <table class="table table-bordered">
           
            <tr>
                <th>Name</th>
                <th>Issues Count</th>
                <th>Pushed At</th>
                <th>Updated At</th>

            </tr>

                @foreach (var item in Model.Repositories)
            {
                    <tr>
                        <td>  @item.Name</td>
                        <td>  @item.OpenIssuesCount</td>
                        <td>  @item.PushedAt</td>
                        <td>  @item.UpdatedAt</td>
                    </tr>
                }
                   

        </table>

    </div>
</body>
</html>
